<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/banner_network_error">

    <ImageView
        android:id="@+id/image_added"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/text_error"
        android:src="@drawable/ic_baseline_error_24"
        app:layout_constraintBottom_toBottomOf="@id/text_error"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_error" />

    <TextView
        android:id="@+id/text_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:fontFamily="@font/newtown"
        android:lineSpacingExtra="@dimen/dp_10"
        android:paddingVertical="@dimen/dp_10"
        android:text="@string/text_error_banner"
        android:textColor="@color/purple_500"
        android:textSize="@dimen/sp_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/newtown"
        android:padding="@dimen/dp_10"
        android:text="@string/cancel_banner"
        android:textColor="@color/purple_500"
        android:textSize="@dimen/sp_18"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/text_repeat"
        app:layout_constraintTop_toBottomOf="@id/text_error" />

    <TextView
        android:id="@+id/text_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/newtown"
        android:padding="@dimen/dp_10"
        android:text="@string/repeat_banner"
        android:textColor="@color/purple_500"
        android:textSize="@dimen/sp_18"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_error" />

</androidx.constraintlayout.widget.ConstraintLayout>