<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/dp_10">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_hero"
        android:layout_width="@dimen/dp_160"
        android:layout_height="@dimen/dp_120"
        app:cardCornerRadius="@dimen/dp_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_hero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_name_hero"
        style="@style/TextNameHeroItem"
        android:layout_width="@dimen/dp_160"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@id/card_view_hero"
        app:layout_constraintStart_toStartOf="@+id/card_view_hero"
        app:layout_constraintTop_toBottomOf="@id/card_view_hero"
        tools:text="@string/name_hero" />

</androidx.constraintlayout.widget.ConstraintLayout>