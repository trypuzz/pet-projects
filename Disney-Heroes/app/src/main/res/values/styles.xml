<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStart">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/color_text_button</item>
        <item name="android:fontFamily">@font/helvetica_neue_medium_extended</item>
        <item name="android:background">@drawable/bg_button</item>

        <item name="android:shadowColor">@color/color_button</item>
        <item name="android:shadowDx">10</item>
        <item name="android:shadowDy">10</item>
        <item name="android:shadowRadius">1</item>

    </style>

    <style name="Text">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:fontFamily">@font/helvetica_neue_medium_extended</item>
    </style>

    <style name="TextNameHeroItem">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@color/color_image_button_checked</item>
        <item name="android:fontFamily">@font/helvetica_neue_bold</item>
    </style>

    <style name="TextNameHero">
        <item name="android:textSize">@dimen/sp_34</item>
        <item name="android:textColor">@color/color_icon_button</item>
        <item name="android:fontFamily">@font/helvetica_neue_bold</item>
    </style>

    <style name="TextNameItemInfo">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@color/color_icon_button</item>
        <item name="android:fontFamily">@font/irish_grover</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextNameCategory">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@color/color_icon_button</item>
        <item name="android:fontFamily">@font/suez_one</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:elevation">@dimen/dp_2</item>
        <item name="android:background">@drawable/bg_name_category</item>
    </style>

    <style name="TextBannerAddDeleteFavorite">
        <item name="android:textSize">@dimen/sp_22</item>
        <item name="android:textColor">@color/color_icon_button</item>
        <item name="android:fontFamily">@font/disney_park</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>