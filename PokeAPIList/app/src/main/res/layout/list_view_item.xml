<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="pokemon"
            type="com.example.pokeapi_list.repositories.PokemonListItem" />
        <variable
            name="clickListener"
            type="com.example.pokeapi_list.ui.list.PokemonListener" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:layout_margin="8dp"
        android:backgroundTint="#FFE1E1"
        android:onClick="@{() -> clickListener.onClick(pokemon)}"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/amphibian_name"
            android:layout_width="172dp"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:padding="8dp"
            android:text="@{pokemon.name}"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Pokemon" />

    </com.google.android.material.card.MaterialCardView>

</layout>
